    flex-wrap: wrap;
    gap: 0.5rem;
}

.skill-tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: var(--border-radius-sm);
    color: var(--nebula-cyan);
    font-size: 0.9rem;
    font-weight: 600;
    font-family: var(--font-mono);
    transition: var(--transition-fast);
}

.skill-tag:hover {
    background: rgba(99, 102, 241, 0.15);
    border-color: var(--accent-primary);
}

/* ============================================
   Projects Section
   ============================================ */
.project-role {
    padding: 0.375rem 0.875rem;
    background: rgba(6, 182, 212, 0.15);
    border: 1px solid rgba(6, 182, 212, 0.3);
    border-radius: 20px;
    color: var(--nebula-cyan);
    font-size: 0.85rem;
    font-weight: 600;
    font-family: var(--font-mono);
}

.project-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--star-white);
    margin-bottom: var(--spacing-sm);
}

.project-description {
    color: var(--star-dim);
    line-height: 1.7;
    margin-bottom: var(--spacing-sm);
    flex-grow: 1;
}

.project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: var(--spacing-sm);
}

.project-links {
    display: flex;
    gap: var(--spacing-sm);
}

/* ============================================
   Domain Expertise Section
   ============================================ */
.expertise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
    max-width: 1000px;
    margin: 0 auto;
}

.expertise-card {
    text-align: center;
    padding: var(--spacing-md) var(--spacing-md);
}

.expertise-icon {
    width: 70px;
    height: 70px;
    margin: 0 auto var(--spacing-sm);
    background: var(--accent-gradient);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 30px rgba(99, 102, 241, 0.4);
}

.expertise-icon svg {
    width: 36px;
    height: 36px;
    color: var(--star-white);
}

.expertise-title {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--star-white);
    margin-bottom: var(--spacing-sm);
}

.expertise-description {
    color: var(--star-dim);
    line-height: 1.7;
}

/* ============================================
   Contact Section
   ============================================ */
.contact-content {
    max-width: 700px;
    margin: 0 auto;
}

.contact-info {
    padding: var(--spacing-lg);
}

.contact-intro {
    font-size: 1.1rem;
    text-align: center;
    color: var(--star-dim);
    margin-bottom: var(--spacing-md);
    line-height: 1.8;
}

.contact-methods {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
}

.contact-method {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm);
    background: rgba(99, 102, 241, 0.05);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: var(--border-radius-sm);
    transition: var(--transition-normal);
    text-decoration: none;
    color: inherit;
}

.contact-method:hover {
    background: rgba(99, 102, 241, 0.1);
    border-color: var(--accent-primary);
    transform: translateX(5px);
}

.contact-icon {
    width: 50px;
    height: 50px;
    background: var(--accent-gradient);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.contact-icon svg {
    width: 24px;
    height: 24px;
    color: var(--star-white);
}

.contact-details h4 {
    font-size: 1rem;
    color: var(--star-white);
    margin-bottom: 0.25rem;
}

.contact-details p {
    font-size: 0.95rem;
    color: var(--star-dim);
}

.contact-social {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--glass-border);
}

.social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: var(--border-radius-sm);
    color: var(--star-white);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition-normal);
}

.social-link:hover {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
}

.social-link svg {
    width: 20px;
    height: 20px;
}

/* ============================================
   Footer
   ============================================ */
.footer {
    padding: var(--spacing-md) 0;
    text-align: center;
    border-top: 1px solid var(--glass-border);
    background: rgba(10, 14, 39, 0.5);
    backdrop-filter: var(--glass-blur);
}

.footer p {
    color: var(--star-dim);
    font-size: 0.95rem;
}

/* ============================================
   Animations
   ============================================ */
@keyframes fade-in-up {
    from {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in {
    opacity: 0;
    animation: fade-in-up 0.8s ease-out forwards;
}

/* Scroll animations will be applied via JavaScript */
.scroll-reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.scroll-reveal.revealed {
    opacity: 1;
    transform: translateY(0);
}

/* ============================================
   Responsive Design
   ============================================ */
@media (max-width: 768px) {
    :root {
        --spacing-lg: 3rem;
        --spacing-xl: 4rem;
    }

    .nav-links {
        position: fixed;
        top: var(--nav-height);
        left: 0;
        right: 0;
        background: rgba(10, 14, 39, 0.98);
        backdrop-filter: var(--glass-blur);
        flex-direction: column;
        padding: var(--spacing-md);
        gap: var(--spacing-sm);
        border-bottom: 1px solid var(--glass-border);
        transform: translateY(-100%);
        opacity: 0;
        transition: var(--transition-normal);
        pointer-events: none;
    }

    .nav-links.open {
        transform: translateY(0);
        opacity: 1;
        pointer-events: all;
    }

    .mobile-menu-toggle {
        display: block;
    }

    .hero {
        min-height: calc(100vh - var(--nav-height));
        padding: var(--spacing-md) 0;
    }

    .hero-cta {
        flex-direction: column;
        align-items: stretch;
    }

    .btn {
        justify-content: center;
    }

    .timeline::before {
        left: var(--spacing-sm);
    }

    .timeline-item {
        padding-left: var(--spacing-lg);
    }

    .timeline-marker {
        left: calc(var(--spacing-sm) - 8px);
    }

    .timeline-header {
        flex-direction: column;
    }

    .skills-grid,
    .projects-grid,
    .expertise-grid {
        grid-template-columns: 1fr;
    }

    .contact-social {
        flex-direction: column;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 var(--spacing-sm);
    }

    .glass-card {
        padding: var(--spacing-sm);
    }

    .section {
        padding: var(--spacing-md) 0;
    }
}

/* ============================================
   Accessibility
   ============================================ */
@media (prefers-reduced-motion: reduce) {
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(180deg,
        transparent 0%,
        var(--accent-primary) 10%,
        var(--accent-primary) 90%,
        transparent 100%);
    box-shadow: 0 0 10px rgba(99, 102, 241, 0.5);
    animation: timeline-glow 3s ease-in-out infinite;
}

@keyframes timeline-glow {

    0%,
    100% {
        opacity: 0.6;
        box-shadow: 0 0 10px rgba(99, 102, 241, 0.3);
    }

    50% {
        opacity: 1;
        box-shadow: 0 0 20px rgba(99, 102, 241, 0.6);
    }
}

.timeline-item {
    position: relative;
    padding-left: 70px;
    opacity: 0;
    transform: translateX(-30px);
    animation: slide-in-timeline 0.6s ease-out forwards;
}

.timeline-item:nth-child(1) {
    animation-delay: 0.1s;
}

.timeline-item:nth-child(2) {
    animation-delay: 0.3s;
}

.timeline-item:nth-child(3) {
    animation-delay: 0.5s;
}

@keyframes slide-in-timeline {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* Pulsing timeline marker */
.timeline-marker {
    position: absolute;
    left: 13px;
    top: 24px;
    width: 18px;
    height: 18px;
    background: var(--accent-gradient);
    border-radius: 50%;
    border: 3px solid var(--deep-space);
    box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.7);
    animation: pulse-marker 2s ease-out infinite;
    z-index: 2;
}

@keyframes pulse-marker {
    0% {
        box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.7);
    }

    50% {
        box-shadow: 0 0 0 10px rgba(99, 102, 241, 0);
    }

    100% {
        box-shadow: 0 0 0 0 rgba(99, 102, 241, 0);
    }
}

.timeline-item:hover .timeline-marker {
    transform: scale(1.3);
    transition: transform 0.3s ease;
}

.timeline-content {
    padding: 1.75rem 2rem;
    position: relative;
    overflow: hidden;
}

/* Subtle gradient overlay on hover */
.timeline-item:hover .timeline-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--accent-gradient);
    animation: shimmer 1.5s ease-in-out infinite;
}

@keyframes shimmer {

    0%,
    100% {
        opacity: 0.5;
    }

    50% {
        opacity: 1;
    }
}

.timeline-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: var(--spacing-sm);
    gap: var(--spacing-sm);
    flex-wrap: wrap;
}

.timeline-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--star-white);
    margin-bottom: 0.25rem;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.timeline-company {
    font-size: 1rem;
    color: var(--nebula-cyan);
    font-weight: 500;
}

.timeline-date {
    padding: 0.5rem 1rem;
    background: rgba(99, 102, 241, 0.15);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 20px;
    color: var(--nebula-cyan);
    font-size: 0.85rem;
    font-weight: 600;
    font-family: var(--font-mono);
    white-space: nowrap;
}

.timeline-description {
    list-style: none;
    margin-bottom: var(--spacing-sm);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.timeline-description li {
    padding-left: 1.5rem;
    position: relative;
    color: var(--star-dim);
    font-size: 0.95rem;
    line-height: 1.7;
    transition: color 0.3s ease;
}

.timeline-description li::before {
    content: 'â–¹';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-size: 1.2rem;
    line-height: 1.7;
}

.timeline-item:hover .timeline-description li {
    color: var(--star-white);
}

.timeline-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.tech-tag {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 15px;
    color: var(--nebula-cyan);
    font-size: 0.8rem;
    font-weight: 600;
    font-family: var(--font-mono);
    transition: all 0.3s ease;
}

.tech-tag:hover {
    background: rgba(99, 102, 241, 0.2);
    border-color: var(--accent-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
}/* ============================================
   Featured Projects Section - Enhanced
   ============================================ */
.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.project-card {
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(30px);
    animation: fade-in-up 0.6s ease-out forwards;
}

.project-card:nth-child(1) {
    animation-delay: 0.1s;
}

.project-card:nth-child(2) {
    animation-delay: 0.3s;
}

.project-card:nth-child(3) {
    animation-delay: 0.5s;
}

.project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent-gradient);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s ease;
}

.project-card:hover::before {
    transform: scaleX(1);
}

.project-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 40px rgba(99, 102, 241, 0.3);
    border-color: var(--accent-primary);
}

.project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-sm);
}

.project-icon {
    width: 40px;
    height: 40px;
    padding: 8px;
    background: var(--accent-gradient);
    border-radius: 12px;
    color: var(--star-white);
    transition: transform 0.3s ease;
}

.project-card:hover .project-icon {
    transform: rotate(10deg) scale(1.1);
}
