/* ============================================
   CSS Custom Properties & Design Tokens
   ============================================ */
:root {
    /* Space Theme Colors */
    --space-dark: #0a0e27;
    --space-darker: #050814;
    --space-blue: #1a1f3a;
    --nebula-purple: #8b5cf6;
    --nebula-blue: #3b82f6;
    --nebula-cyan: #06b6d4;
    --cosmic-pink: #ec4899;
    --star-white: #ffffff;
    --star-dim: #94a3b8;

    /* Accent Colors */
    --accent-primary: #6366f1;
    --accent-secondary: #a855f7;
    --accent-tertiary: #ec4899;
    --accent-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 50%, #ec4899 100%);

    /* Glass Morphism */
    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --glass-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    --glass-blur: blur(12px);

    /* Typography */
    --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-mono: 'JetBrains Mono', 'Courier New', monospace;

    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;

    /* Layout */
    --container-max: 1200px;
    --nav-height: 70px;
    --border-radius: 16px;
    --border-radius-sm: 8px;

    /* Transitions */
    --transition-fast: 0.2s ease;
    --transition-normal: 0.3s ease;
    --transition-slow: 0.5s ease;
}

/* ============================================
   Reset & Base Styles
   ============================================ */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    overflow-x: hidden;
}

body {
    font-family: var(--font-primary);
    background-color: var(--space-darker);
    color: var(--star-white);
    line-height: 1.6;
    overflow-x: hidden;
    position: relative;
}

/* ============================================
   Space Background with Animations
   ============================================ */
.space-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: radial-gradient(ellipse at bottom, var(--space-blue) 0%, var(--space-darker) 100%);
    overflow: hidden;
}

.nebula {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
        radial-gradient(ellipse at 20% 30%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at 80% 70%, rgba(59, 130, 246, 0.12) 0%, transparent 50%),
        radial-gradient(ellipse at 50% 50%, rgba(236, 72, 153, 0.08) 0%, transparent 50%);
    animation: nebula-drift 30s ease-in-out infinite alternate;
}

@keyframes nebula-drift {
    0% {
        transform: translate(0, 0) scale(1);
    }

    100% {
        transform: translate(50px, -30px) scale(1.1);
    }
}

/* Animated Stars */
.stars,
.stars-slow {
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    background-image:
        radial-gradient(2px 2px at 20% 30%, white, transparent),
        radial-gradient(2px 2px at 60% 70%, white, transparent),
        radial-gradient(1px 1px at 50% 50%, white, transparent),
        radial-gradient(1px 1px at 80% 10%, white, transparent),
        radial-gradient(2px 2px at 90% 60%, white, transparent),
        radial-gradient(1px 1px at 33% 80%, white, transparent),
        radial-gradient(1px 1px at 15% 90%, white, transparent);
    background-size: 200% 200%;
    background-repeat: repeat;
    animation: stars-twinkle 4s ease-in-out infinite;
}

.stars-slow {
    background-image:
        radial-gradient(1px 1px at 10% 20%, rgba(255, 255, 255, 0.8), transparent),
        radial-gradient(1px 1px at 40% 60%, rgba(255, 255, 255, 0.6), transparent),
        radial-gradient(1px 1px at 70% 40%, rgba(255, 255, 255, 0.7), transparent),
        radial-gradient(2px 2px at 85% 80%, rgba(255, 255, 255, 0.5), transparent),
        radial-gradient(1px 1px at 25% 75%, rgba(255, 255, 255, 0.9), transparent);
    animation: stars-twinkle 6s ease-in-out infinite reverse;
}

/* Black Hole Effect */
.black-hole {
    position: absolute;
    top: 15%;
    right: 10%;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(circle at center,
            transparent 30%,
            rgba(139, 92, 246, 0.3) 40%,
            rgba(99, 102, 241, 0.2) 50%,
            rgba(59, 130, 246, 0.1) 60%,
            transparent 70%);
    animation: black-hole-spin 20s linear infinite, black-hole-pulse 4s ease-in-out infinite;
    opacity: 0.6;
    filter: blur(2px);
}

.black-hole::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: radial-gradient(circle at center,
            rgba(10, 14, 39, 1) 0%,
            rgba(10, 14, 39, 0.9) 50%,
            transparent 100%);
    box-shadow:
        0 0 30px rgba(139, 92, 246, 0.5),
        inset 0 0 20px rgba(0, 0, 0, 0.8);
}

@keyframes black-hole-spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes black-hole-pulse {

    0%,
    100% {
        transform: scale(1);
        opacity: 0.6;
    }

    50% {
        transform: scale(1.1);
        opacity: 0.8;
    }
}

/* Floating Planets */
.planet {
    position: absolute;
    border-radius: 50%;
    opacity: 0.7;
    animation: float-orbit 30s ease-in-out infinite;
}

.planet-1 {
    width: 80px;
    height: 80px;
    top: 25%;
    left: 15%;
    background: radial-gradient(circle at 30% 30%, #a855f7, #7c3aed);
    box-shadow:
        0 0 30px rgba(168, 85, 247, 0.4),
        inset -10px -10px 20px rgba(0, 0, 0, 0.3);
    animation-duration: 35s;
}

.planet-2 {
    width: 60px;
    height: 60px;
    top: 60%;
    left: 80%;
    background: radial-gradient(circle at 30% 30%, #06b6d4, #0284c7);
    box-shadow:
        0 0 25px rgba(6, 182, 212, 0.4),
        inset -8px -8px 15px rgba(0, 0, 0, 0.3);
    animation-duration: 40s;
    animation-delay: -10s;
}

.planet-3 {
    width: 50px;
    height: 50px;
    top: 80%;
    left: 25%;
    background: radial-gradient(circle at 30% 30%, #f59e0b, #d97706);
    box-shadow:
        0 0 20px rgba(245, 158, 11, 0.4),
        inset -6px -6px 12px rgba(0, 0, 0, 0.3);
    animation-duration: 45s;
    animation-delay: -20s;
}

/* Add rings to planet-2 */
.planet-2::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotateX(75deg);
    width: 100px;
    height: 100px;
    border: 3px solid rgba(6, 182, 212, 0.3);
    border-radius: 50%;
}

@keyframes float-orbit {

    0%,
    100% {
        transform: translateY(0) translateX(0) rotate(0deg);
    }

    25% {
        transform: translateY(-20px) translateX(10px) rotate(5deg);
    }

    50% {
        transform: translateY(-30px) translateX(-10px) rotate(-3deg);
    }

    75% {
        transform: translateY(-15px) translateX(15px) rotate(4deg);
    }
}

/* Large Decorative Stars */
.star-large {
    position: absolute;
    background: white;
    clip-path: polygon(50% 0%,
            61% 35%,
            98% 35%,
            68% 57%,
            79% 91%,
            50% 70%,
            21% 91%,
            32% 57%,
            2% 35%,
            39% 35%);
    animation: star-glow 3s ease-in-out infinite;
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.8));
}

.star-1 {
    width: 30px;
    height: 30px;
    top: 35%;
    left: 70%;
    animation-delay: 0s;
}

.star-2 {
    width: 25px;
    height: 25px;
    top: 50%;
    left: 10%;
    animation-delay: -1s;
}

.star-3 {
    width: 20px;
    height: 20px;
    top: 75%;
    left: 85%;
    animation-delay: -2s;
}

@keyframes star-glow {

    0%,
    100% {
        opacity: 0.6;
        transform: scale(1);
    }

    50% {
        opacity: 1;
        transform: scale(1.2);
    }
}

/* Spaceship */
.spaceship {
    position: absolute;
    width: 120px;
    height: 60px;
    top: 40%;
    left: -150px;
    background-image: url('spaceship.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.8;
    animation: spaceship-fly 60s linear infinite;
    filter: drop-shadow(0 0 10px rgba(99, 102, 241, 0.6));
}

/* Fallback spaceship design if image doesn't load */
.spaceship::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    width: 80px;
    height: 30px;
    background: linear-gradient(90deg, #6366f1, #a855f7);
    clip-path: polygon(0% 50%, 15% 0%, 85% 0%, 100% 50%, 85% 100%, 15% 100%);
    opacity: 0;
}

.spaceship::after {
    content: '';
    position: absolute;
    top: 50%;
    left: -20px;
    transform: translateY(-50%);
    width: 30px;
    height: 15px;
    background: radial-gradient(ellipse at left, rgba(99, 102, 241, 0.8), transparent);
    opacity: 0;
}

/* Show fallback only if image fails to load */
.spaceship:not([style*="background-image"])::before,
.spaceship:not([style*="background-image"])::after {
    opacity: 1;
}

@keyframes spaceship-fly {
    0% {
        left: -150px;
        top: 40%;
    }

    50% {
        left: 50%;
        top: 35%;
    }

    100% {
        left: 110%;
        top: 45%;
    }
}

@keyframes stars-twinkle {

    0%,
    100% {
        opacity: 0.8;
        transform: scale(1);
    }

    50% {
        opacity: 1;
        transform: scale(1.05);
    }
}

/* ============================================
   Container & Layout
   ============================================ */
.container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
}

section {
    position: relative;
}

.section {
    padding: var(--spacing-xl) 0;
}

.section-dark {
    background: rgba(10, 14, 39, 0.3);
    backdrop-filter: blur(10px);
}

/* ============================================
   Navigation
   ============================================ */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--nav-height);
    background: rgba(10, 14, 39, 0.8);
    backdrop-filter: var(--glass-blur);
    border-bottom: 1px solid var(--glass-border);
    z-index: 1000;
    transition: var(--transition-normal);
}

.navbar .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
}

.nav-brand {
    font-size: 1.5rem;
    font-weight: 700;
}

.logo-text {
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.nav-links {
    display: flex;
    gap: var(--spacing-md);
    list-style: none;
}

.nav-link {
    color: var(--star-dim);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: var(--transition-fast);
    position: relative;
    padding: 0.5rem 0;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent-gradient);
    transition: var(--transition-normal);
}

.nav-link:hover,
.nav-link.active {
    color: var(--star-white);
}

.nav-link:hover::after,
.nav-link.active::after {
    width: 100%;
}

.mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--star-white);
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
}

/* ============================================
   Hero Section
   ============================================ */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: var(--nav-height);
    position: relative;
}

.hero-content {
    text-align: center;
    animation: fade-in-up 1s ease-out;
}

.hero-greeting {
    font-size: 1.2rem;
    color: var(--star-dim);
    margin-bottom: var(--spacing-xs);
    font-weight: 400;
}

.hero-name {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 700;
    margin-bottom: var(--spacing-sm);
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
}

.hero-tagline {
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    color: var(--nebula-cyan);
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
}

.hero-description {
    font-size: 1.1rem;
    color: var(--star-dim);
    max-width: 600px;
    margin: 0 auto var(--spacing-md);
    line-height: 1.8;
}

.hero-cta {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    margin-bottom: var(--spacing-md);
    flex-wrap: wrap;
}

.hero-social {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    margin-top: var(--spacing-md);
}

.hero-social a {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 50%;
    color: var(--star-white);
    transition: var(--transition-normal);
    backdrop-filter: var(--glass-blur);
}

.hero-social a:hover {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
}

/* ============================================
   Buttons
   ============================================ */
.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    border-radius: var(--border-radius-sm);
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: var(--transition-normal);
    cursor: pointer;
    border: none;
    font-family: var(--font-primary);
}

.btn-primary {
    background: var(--accent-gradient);
    color: var(--star-white);
    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(99, 102, 241, 0.5);
}

.btn-secondary {
    background: var(--glass-bg);
    color: var(--star-white);
    border: 1px solid var(--glass-border);
    backdrop-filter: var(--glass-blur);
}

.btn-secondary:hover {
    background: var(--glass-border);
    transform: translateY(-2px);
    border-color: var(--accent-primary);
}

.btn-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius-sm);
    color: var(--star-dim);
    font-size: 0.9rem;
    text-decoration: none;
    transition: var(--transition-fast);
    cursor: not-allowed;
}

.btn-link:not([disabled]):hover {
    background: var(--glass-border);
    color: var(--star-white);
    cursor: pointer;
}

/* ============================================
   Section Titles
   ============================================ */
.section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: var(--spacing-lg);
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* ============================================
   Glass Card Component
   ============================================ */
.glass-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-md);
    backdrop-filter: var(--glass-blur);
    box-shadow: var(--glass-shadow);
    transition: var(--transition-normal);
}

.glass-card:hover {
    transform: translateY(-5px);
    border-color: rgba(99, 102, 241, 0.3);
    box-shadow: 0 12px 40px rgba(99, 102, 241, 0.2);
}

/* ============================================
   About Section
   ============================================ */
.about-content {
    max-width: 900px;
    margin: 0 auto;
}

.about-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--star-dim);
    margin-bottom: var(--spacing-sm);
}

.about-text:last-child {
    margin-bottom: 0;
}

.about-text strong {
    color: var(--star-white);
    font-weight: 600;
}

/* ============================================
   Skills Section
   ============================================ */
.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
}

.skill-category {
    padding: var(--spacing-md);
}

.skill-category-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
}

.skill-category-header svg {
    width: 28px;
    height: 28px;
    color: var(--accent-primary);
}

.skill-category-header h3 {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--star-white);
}

.skill-tags {
    color: var(--star-dim);
    max-width: 600px;
    margin: 0 auto var(--spacing-md);
    line-height: 1.8;
}

